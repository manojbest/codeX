{
  "name": "codeX",
  "version": "1.0.0",
  "description": "HackDay - 2020",
  "main": "build/index.js",
  "scripts": {
    "start": "yarn lint && nodemon -r dotenv/config --watch src src/server.ts",
    "build": "tsc --project ./",
    "prod": "node -r dotenv/config build/server.js",
    "lint": "eslint --ext .ts src --color",
    "format": "prettier --write src/**/*.{ts,json}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bmax-Tech/codeX.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bmax-Tech/codeX/issues"
  },
  "homepage": "https://github.com/Bmax-Tech/codeX#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "dockerode": "^3.2.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/dockerode": "^3.2.1",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "log4js": "^6.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "prettier-tslint": "^0.4.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --write"
    ]
  }
}
